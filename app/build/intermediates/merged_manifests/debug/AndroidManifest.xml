        <activity android:name="com.example.myapplication.ui.workers.EmployeeDetailActivity" />
        <activity android:name="com.example.myapplication.ui.workers.EmployeeFarmCodeActivity" />
        <activity
            android:name="com.example.myapplication.ui.loginAndRegister.CheckUserLoggedInActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.myapplication.ui.workers.EmployeeMainActivity" />
        <activity android:name="com.example.myapplication.ui.loginAndRegister.RegisterInfoEmployeeActivity" />
        <activity android:name="com.example.myapplication.ui.loginAndRegister.RegisterInfoOwnerActivity" />
        <activity
            android:name="com.example.myapplication.ui.workers.WorkersActivity"
